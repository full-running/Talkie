{
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1"
  },
  "name": "talkie",
  "private": true,
  "workspaces": [
    "front",
    "back"
  ],
  "scripts": {
    "dev": "concurrently -n back,front,lint -c green,blue,magenta \"npm:dev --workspace back\" \"npm:dev --workspace front\" \"npm:lint:watch --workspace front\"",
    "dev:back": "npm run dev --workspace back",
    "dev:front": "npm run dev --workspace front",
    "lint:watch": "chokidar \"front/src/**/*.{ts,tsx}\" -c \"npm:lint:fix --workspace front\""
  }
}
